{
  // VSCode
	"workbench.editor.enablePreview": false,
	"workbench.editor.enablePreviewFromQuickOpen": false,
	"workbench.sideBar.location": "right",
	"workbench.statusBar.visible": true,
	"workbench.startupEditor": "newUntitledFile",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.editorAssociations": {"*.sqlite": "default" },
  "workbench.colorTheme": "Synthwave x Fluoromachine & epic animations",
	"editor.renderWhitespace": "none",
	"editor.minimap.enabled": false,
	"editor.tabSize": 2,
	"editor.detectIndentation": false,
	"editor.codeActionsOnSave": { "source.fixAll.eslint": true },
  "zenMode.hideLineNumbers": false,
	"zenMode.hideTabs": true,
  "breadcrumbs.enabled": true,
  "explorer.confirmDelete": false,
  "security.workspace.trust.untrustedFiles": "open",
  "files.exclude": { "**/.git": false },
	"window.zoomLevel": -1,
  "vscode_custom_css.imports": ["my_specif.css: (https://github.com/PedroGaletti/my-settings/blob/main/vscode/main.css)"],

  // Git
  "git.autofetch": true,

  // ESLint
  "eslint.validate": ["javascript", "javascriptreact"],
	
  // Prettier
	"prettier.singleQuote": true,
	"prettier.jsxSingleQuote": true,
	"prettier.quoteProps": "consistent",
  "prettier.printWidth": 110,
	"prettier.semi": false,
	"prettier.useTabs": true,

  // Json
  "[jsonc]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },

  // Javascript
	"[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
	"javascript.updateImportsOnFileMove.enabled": "always",
	"javascript.suggest.autoImports": false,

  // Typescript
	"typescript.updateImportsOnFileMove.enabled": "always",

  // React
  "[typescriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[javascriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },

  // Golang
	"go.toolsManagement.autoUpdate": true,
	"gopls": { "build.experimentalWorkspaceModule": true },
  
  // Python
	"[python]": { "editor.formatOnType": true },
}
